{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@dignite-ng/expand.components": ["packages/components/src/public-api.ts"],
      "@dignite-ng/expand.core": ["packages/core/src/public-api.ts"],
      "@dignite-ng/expand.generators": ["packages/generators/src/index.ts"],
      "@dignite-ng/expand.file-explorer": ["packages/file-explorer/src/public-api.ts"],
      "@dignite-ng/expand.file-explorer/config": ["packages/file-explorer/config/src/public-api.ts"],
      "@dignite-ng/expand.dynamic-form": ["packages/dynamic-form/src/public-api.ts"],
      "@dignite-ng/expand.cms": ["packages/cms/src/public-api.ts"],
      "@dignite-ng/expand.cms/config": ["packages/cms/config/src/public-api.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
