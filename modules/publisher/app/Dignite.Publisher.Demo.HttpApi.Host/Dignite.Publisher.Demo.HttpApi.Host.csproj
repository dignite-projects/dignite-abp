  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.UI.Theme.LeptonXLite" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dignite.Publisher.Demo.Application\Dignite.Publisher.Demo.Application.csproj" />
    <ProjectReference Include="..\Dignite.Publisher.Demo.HttpApi\Dignite.Publisher.Demo.HttpApi.csproj" />
    <ProjectReference Include="..\Dignite.Publisher.Demo.EntityFrameworkCore\Dignite.Publisher.Demo.EntityFrameworkCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.Studio.Client.AspNetCore" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Logs\**" />
    <Content Remove="Logs\**" />
    <EmbeddedResource Remove="Logs\**" />
    <None Remove="Logs\**" />
  </ItemGroup>

</Project>
