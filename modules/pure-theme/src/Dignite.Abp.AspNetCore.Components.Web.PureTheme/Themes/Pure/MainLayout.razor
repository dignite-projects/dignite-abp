@using Volo.Abp.Ui.LayoutHooks
@using Volo.Abp.AspNetCore.Components.Web.Theming.Components.LayoutHooks
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed>
        <Bar Breakpoint="Breakpoint.Desktop" Background="Background.White" ThemeContrast="ThemeContrast.Light" Class="main-navbar" ElementId="main-navbar" Shadow="Shadow.Small">
            @if (SideNav != null)
            {
                <BarToggler Bar="@SideNav.Sidebar" ElementId="navbarToggler" />
            }
            <Branding />
            <NavToolbar />
        </Bar>
    </LayoutHeader>
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <SideNav @ref="SideNav" />
            </LayoutSiderContent>
        </LayoutSider>
        <Layout>
            <LayoutContent Padding="Padding.Is1.OnX.Is4.OnY.Is4.OnWidescreen">
                <PageAlert />
                <LayoutHook Name="@LayoutHooks.Body.First" Layout="@StandardLayouts.Application" />
                @Body
                <LayoutHook Name="@LayoutHooks.Body.Last" Layout="@StandardLayouts.Application" />
                <DynamicLayoutComponent />
                <UiMessageAlert />
                <UiNotificationAlert />
                <UiPageProgress />
            </LayoutContent>
            <LayoutFooter Fixed>
                <Bar Breakpoint="Breakpoint.FullHD" Background="Background.White" ThemeContrast="ThemeContrast.Light" Class="main-navbar">
                    <ShortcutNav />
                </Bar>
            </LayoutFooter>
        </Layout>
    </Layout>
</Layout>
