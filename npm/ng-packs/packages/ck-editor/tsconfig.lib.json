{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "module": "esnext",
    "types": ["node"],
    "lib": [
      "dom",
      "es2018"
